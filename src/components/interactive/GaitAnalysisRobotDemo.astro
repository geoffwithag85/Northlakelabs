---
// Real-Time Gait Analysis Robot Demo - Astro wrapper for React component
import { GaitAnalysisDemo } from './GaitAnalysisDemo/index.tsx';
---

<div id="gait-analysis-demo" class="bg-white/5 p-8 rounded-2xl border border-white/10 backdrop-blur-sm">
  <h3 class="text-xl font-semibold mb-4 text-burnt-sienna">Real-Time Gait Analysis Robot</h3>
  <p class="text-gray-300 mb-6 leading-relaxed">
    Experience our AI-powered robotic gait analysis system with real-time biomechanics processing, 
    3D visualization, and intelligent pattern recognition.
  </p>
    <!-- React Component -->
  <div class="w-full min-h-[800px]">
    <GaitAnalysisDemo client:only="react" />
  </div>

  <div class="mt-6 p-4 bg-gradient-to-r from-burnt-sienna/10 to-royal-purple/10 rounded-lg border border-burnt-sienna/20">
    <h4 class="text-sm font-semibold text-burnt-sienna mb-2">Demo Features:</h4>
    <div class="grid md:grid-cols-2 gap-4 text-sm text-gray-400">
      <ul class="space-y-1">
        <li>• Real-time 3D visualization</li>
        <li>• AI-powered gait analysis</li>
        <li>• Interactive sensor array</li>
      </ul>
      <ul class="space-y-1">
        <li>• Live biomechanics data</li>
        <li>• Pattern recognition insights</li>
        <li>• Customizable scenarios</li>
      </ul>
    </div>
  </div>
</div>
